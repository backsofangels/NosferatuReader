<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/readerBackgroundColor">

    <FrameLayout
        android:id="@+id/reader_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/immersive_header_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="8dp"
        android:paddingHorizontal="16dp"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="?attr/readerTextColor"
        android:alpha="0.6"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="NOME CAPITOLO"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/immersive_footer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ProgressBar
            android:id="@+id/immersive_progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:progressTint="?attr/readerTextColor"
            android:progressBackgroundTint="@android:color/transparent"
            tools:progress="30"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/immersive_footer_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="12dp"
            android:paddingHorizontal="16dp"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="?attr/readerTextColor"
            android:alpha="0.6"
            android:maxLines="1"
            app:layout_constraintTop_toBottomOf="@id/immersive_progress_bar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/menu_top_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/readerBackgroundColor"
        android:elevation="4dp"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:src="@drawable/ic_expand_less"
            android:rotation="-90"
            app:tint="?attr/readerTextColor"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/btn_font_settings"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:src="@drawable/ic_more"
            app:tint="?attr/readerTextColor"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/readerTextColor"
            android:alpha="0.2"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/font_controls_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?attr/readerBackgroundColor"
        android:elevation="4dp"
        android:visibility="gone"
        android:paddingVertical="8dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/menu_top_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btn_font_dec"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:src="@drawable/font_size_down"
            app:tint="?attr/readerTextColor" />

        <TextView
            android:id="@+id/tv_font_label"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="100%"
            android:textStyle="bold"
            android:textColor="?attr/readerTextColor"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/btn_font_inc"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:src="@drawable/font_size_up"
            app:tint="?attr/readerTextColor" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/menu_bottom_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/readerBackgroundColor"
        android:elevation="8dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/menu_page_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="?attr/readerTextColor"
            android:alpha="0.8"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <SeekBar
            android:id="@+id/menu_seek_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"
            android:progressTint="?attr/readerTextColor"
            android:thumbTint="?attr/readerTextColor"
            app:layout_constraintTop_toBottomOf="@id/menu_page_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/menu_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="?attr/readerTextColor"
            android:alpha="0.2"
            app:layout_constraintTop_toBottomOf="@id/menu_seek_bar" />

        <View
            android:id="@+id/btn_toc"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@id/menu_divider"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/menu_book_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="?attr/readerTextColor"
            android:gravity="center"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginHorizontal="8dp"
            app:layout_constraintTop_toTopOf="@id/btn_toc"
            app:layout_constraintBottom_toTopOf="@+id/menu_book_author"
            app:layout_constraintStart_toEndOf="@id/btn_toc"
            app:layout_constraintEnd_toStartOf="@+id/btn_search"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="TITOLO LIBRO" />

        <TextView
            android:id="@+id/menu_book_author"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="?attr/readerTextColor"
            android:alpha="0.6"
            android:gravity="center"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/menu_book_title"
            app:layout_constraintBottom_toBottomOf="@id/btn_toc"
            app:layout_constraintStart_toStartOf="@id/menu_book_title"
            app:layout_constraintEnd_toEndOf="@id/menu_book_title"
            tools:text="AUTORE LIBRO" />

        <View
            android:id="@+id/btn_search"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@id/menu_divider"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>